{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "document",
            "type": "shell",
            "command": "Rscript",
            "args": [
                "-e",
                "'roxygen2::roxygenize()'"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "compileAttributes",
            "type": "shell",
            "command": "Rscript",
            "args": [
                "-e",
                "'Rcpp::compileAttributes()'"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            // "dependsOn": "document"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "R",
            "args": [
                "CMD",
                "INSTALL",
                "--preclean",
                "--no-multiarch",
                "--with-keep.source",
                "."
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "dependsOn": "compileAttributes",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
